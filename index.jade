doctype html
//- basic libraries: jquery(1.10.2), d3js(3.3.11), angularjs(1.2.3), bootstrap(3.0)/semantic-ui(0.9.3/0.9.5)
- var usecdn = false
- var useog = false
- var lib = { jquery: true, d3js: true, angular: true, bootstrap: true, semantic: false }
- var assets = "assets"
- var thumbnail = "http://dummy.thumbnail"
html(lang="en")
  head(prefix="og: http://ogp.me/ns#")
    meta(charset="utf-8")
    title template
    // libraries
    include library.jade
    // custom files
    link(rel="stylesheet",type="text/css",href="uiload.css")
    link(rel="stylesheet",type="text/css",href="index.css")
  
    script(type="text/javascript",src="require.js")
    script(type="text/javascript",src="html2canvas.js")
    script(type="text/javascript",src="gif.js")

    script(type="text/javascript",src="rgbcolor.js")
    script(type="text/javascript",src="StackBlur.js")
    script(type="text/javascript",src="canvg.js")

    //-script(type="text/javascript",src="index.js")
    script(type="text/javascript",src="index.js")
  body(ng-controller="main")
    nav.navbar.navbar-default.navbar-fixed-top(role="navigation")
      .container-fluid
        .navbar-header
          a.navbar-brand(href="#")
            | LOADING.IO
        .collapse.navbar-collapse
          ul.nav.navbar-nav
            li: a(href="#") GIF
            li: a(href="#") CSS
            li: a(href="#") SVG
            li: a(href="#") MORE
          ul.nav.navbar-nav.pull-right
            li.anim.profile.invis(ng-class="{'invis':!username}"): a(href="#")
              .avatar
                img(ng-src="http://graph.facebook.com/{{uid}}/picture?type=small",ng-show="uid")
              .name {{username}}
            li.logon(ng-show="!accessToken"): a(href="#",ng-click="login()") Login
            li.logon.ng-hide(ng-show="accessToken"): a(href="#",ng-click="logout()") Logout

    #banner
      .img: img(src="banner.png")
      .title
        | Build Your Web App
        br
        | with Loading Icons in
        big(style="color:#ff9;display:inline-block;-webkit-transform:rotate(5deg);font-weight:900;") SVG
        | !

    #gallery
      //-
        img(src="res/default.svg")
        img(src="res/infinity.svg")
        img(src="res/default.svg")
        img(src="res/default.svg")
        img(src="res/default.svg")
        img(src="res/default.svg")
        img(src="res/default.svg")
        img(src="res/default.svg")
        img(src="res/default.svg")
      .ib
        .glyphicon.glyphicon-cog
        .desc custom
      .ib
        .glyphicon.glyphicon-zoom-in
        .desc responsive
      .ib
        .glyphicon.glyphicon-ok-sign
        .desc simple
      .ib
        .glyphicon.glyphicon-eye-open
        .desc wysiwyg
      .ib
        .glyphicon.glyphicon-leaf
        .desc liteweight
      .ib
        .glyphicon.glyphicon-certificate
        .desc open
      .ib
        .glyphicon.glyphicon-dashboard
        .desc fast
      .ib
        .glyphicon.glyphicon-heart-empty
        .desc loving
      .ib
        .glyphicon.glyphicon-globe
        .desc universal
      .ib
        .glyphicon.glyphicon-qrcode
        .desc mobile

    #panel
      #tryit
      #making.anim.invis(ng-class="{'invis':!build.making}") Generating...
      .row
        .col-md-5
          #demo-panel(ng-attr-style="background:{{build.c4 || '#fff'}}")
            uiload(type="default",js,ng-model="demoLoader",bar-color="{{build.c1}}",background="{{build.c4}}",
            ng-attr-style="width:{{build.size * 2}}px;height:{{build.size * 2}}px;margin:{{100 - build.size}}px")
          .progress.progress-striped(ng-mousemove="build.resize($event)")
            .progress-bar(role="progressbar",ng-attr-aria-valuenow="{{build.size}}",aria-valuemin="0",aria-valuemax="100",
            ng-attr-style="width:{{build.size}}%;")
              | {{2 * build.size}}px
          //-uiload(type="infinity",ng-model="demoLoader",js,circle-color="{{build.c1}}",
          //-line-color="{{build.c2}}",speed="{{build.c3}}",background="{{build.c4}}")
          .hide
            .svg
            .css
        .col-md-7
          form
            .row
              .col-sm-6
                .form-group
                  label circle color
                  input.form-control(typ="text",placeholder="e.g., #f00",ng-model="build.c1")
              .col-sm-6
                .form-group
                  label line color
                  input.form-control(typ="text",placeholder="e.g., #f00",ng-model="build.c2")
            .row
              .col-sm-6
                .form-group
                  label circle speed (second)
                  input.form-control(typ="text",placeholder="e.g., 1.2",ng-model="build.speed")
              .col-sm-6
                .form-group
                  label background color
                  input.form-control(typ="text",placeholder="e.g., #f00",ng-model="build.c4")
            .form-group
              #play.btn-group
                .btn.btn-default(ng-class="{'active':build.running}",ng-click="build.start()")
                  | Run
                  .glyphicon.glyphicon-play
                .btn.btn-default(ng-class="{'active':!build.running}",ng-click="build.stop()")
                  | Stop
                  .glyphicon.glyphicon-pause
              #build.btn-group
                .btn.btn-default
                  | Download SVG
                .btn.btn-default(ng-disabled="demoLoader.mode=='svg'")
                  | Download CSS
                .btn.btn-default(ng-click="build.makegif()")
                  | Make GIF
    //-#output
      h2 Generated GIF 
    #output-modal.modal.fade
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type="button",data-dismiss="modal",aria-hidden="true") &times;
            h2.modal-title Build Complete!
          .modal-body
            #output-gif
            | Here is the requested GIF
            .glyphicon.glyphicon-circle-arrow-up
          .modal-footer
            a#output-gif-link.btn.btn-success(href="#") Download GIF
            .btn.btn-default(data-dismiss="modal") Dismiss

    #footer-top
    #footer
      .ib
        a#eula Term of Use
        a#privacy Privacy Policy
        a#attribution Attribution
        a#about About Us

