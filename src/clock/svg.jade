svg.uil-clock(width="100%",height="100%",xmlns="http://www.w3.org/2000/svg",viewBox="0 0 100 100",preserveAspectRatio="xMidYMid")
  rect.bk(x="0",y="0",width="100",height="100",fill="none")
  circle(cx="50",cy="50",r="30",fill="clockColor",stroke="circleColor",stroke-width="8px")
  line(x1="50",y1="50",x2="50",y2="30",stroke="lineColor1",stroke-width="5px",stroke-linecap="round")
    animateTransform(attributeName="transform",type="rotate",from="0 50 50",to="360 50 50",dur="duration2",repeatCount="indefinite")
  line(x1="50",y1="50",x2="50",y2="20",stroke="lineColor2",stroke-width="2px",stroke-linecap="round")
    animateTransform(attributeName="transform",type="rotate",from="0 50 50",to="360 50 50",dur="duration1",repeatCount="indefinite")
